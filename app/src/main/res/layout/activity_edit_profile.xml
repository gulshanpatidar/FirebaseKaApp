<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditProfileActivity">

        <ImageView
            android:id="@+id/user_image_in_edit_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/change_profile_photo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Change Profile Photo"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_image_in_edit_profile" />

        <TextView
            android:id="@+id/user_name_in_edit_profile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline1_edit_profile"
            app:layout_constraintTop_toBottomOf="@id/change_profile_photo_text" />

        <EditText
            android:id="@+id/user_name_in_edit_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline2_edit_profile"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline1_edit_profile"
            app:layout_constraintTop_toBottomOf="@id/user_name_in_edit_profile_label"
            tools:text="Gulshan Patidar" />

        <TextView
            android:id="@+id/user_bio_in_edit_profile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Bio"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline1_edit_profile"
            app:layout_constraintTop_toBottomOf="@id/user_name_in_edit_profile" />

        <EditText
            android:id="@+id/user_bio_in_edit_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline2_edit_profile"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline1_edit_profile"
            app:layout_constraintTop_toBottomOf="@id/user_bio_in_edit_profile_label"
            tools:text="Gulshan Patidar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline1_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline2_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>